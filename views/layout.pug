
mixin productImage(product)
    if product.mainImgUrl
        img.img-thumbnail(src=product.mainImgUrl)
    else 
        | <svg class="bd-placeholder-img" width="100" height="100" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Thumbnail"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"></rect><text x="15%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg>

doctype
html(lang='en')
    head
        meta(charset='utf-8')
        script(src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous")
        link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css' integrity='sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2' crossorigin='anonymous')
        script(src='https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js' integrity='sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx' crossorigin='anonymous')
        title #{pageTitle}
    body
        main
            block header
                nav.navbar.navbar-expand-lg.navbar-dark.bg-primary
                    div.container
                        a.navbar-brand(href="/") #{pageTitle}

                        ul.navbar-nav
                            li.nav-item.dropdown
                                a.nav-link.dropdown-toggle(href="#" id="navbarDropMock" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false") Mock #{nockState}
                                
                                .dropdown-menu(aria-labelledby="navbarDropMock")
                                    if (nockState === "Enabled")
                                        a.dropdown-item(href="/controll/nock/disable") disable
                                        a.dropdown-item.disabled(href="/controll/nock/enable") enable
                                    else
                                        a.dropdown-item.disabled(href="/controll/nock/disable") disable
                                        a.dropdown-item(href="/controll/nock/enable") enable
            block content
